{
  "name": "counter-app",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/compact",
    "packages/counter-cli"
  ],
  "scripts": {
    "compact": "turbo run compact",
    "build": "turbo run build",
    "start": "turbo run start --filter=@repo/web-app",
    "counter-cli-remote": "yarn --cwd packages/counter-cli run start-testnet-remote",
    "counter-cli-remote-ps": "yarn --cwd packages/counter-cli run start-testnet-remote-ps",
    "test-against-testnet": "yarn --cwd packages/counter-cli run test-against-testnet",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint"
  },
  "resolutions": {
    "@midnight-ntwrk/compact-runtime/@midnight-ntwrk/onchain-runtime": "^0.2.6",
    "@midnight-ntwrk/zswap": "^3.0.6"
  },
  "dependencies": {
    "@eslint/js": "^9.28.0",
    "@midnight-ntwrk/compact-runtime": "^0.7.0",
    "@midnight-ntwrk/counter-cli": "^0.1.0",
    "@midnight-ntwrk/dapp-connector-api": "^1.2.3",
    "@midnight-ntwrk/ledger": "^3.0.6",
    "@midnight-ntwrk/midnight-js-contracts": "0.2.5",
    "@midnight-ntwrk/midnight-js-fetch-zk-config-provider": "0.2.5",
    "@midnight-ntwrk/midnight-js-http-client-proof-provider": "0.2.5",
    "@midnight-ntwrk/midnight-js-indexer-public-data-provider": "0.2.5",
    "@midnight-ntwrk/midnight-js-level-private-state-provider": "0.2.5",
    "@midnight-ntwrk/midnight-js-network-id": "0.2.5",
    "@midnight-ntwrk/midnight-js-types": "0.2.5",
    "@midnight-ntwrk/midnight-js-utils": "0.2.5",
    "@midnight-ntwrk/wallet": "^3.7.5",
    "@midnight-ntwrk/wallet-api": "^3.5.0",
    "@midnight-ntwrk/zswap": "^3.0.6",
    "@types/node": "^22.15.29",
    "@types/semver": "^7.7.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "rxjs": "^7.8.1",
    "testcontainers": "^11.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@midnight-ntwrk/midnight-js-node-zk-config-provider": "*",
    "eslint": "^9.28.0",
    "http-server": "^14.1.1",
    "prettier": "^3.2.5",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-wasm": "^3.4.1",
    "vitest": "^3.2.0"
  },
  "packageManager": "yarn@1.22.22"
}
